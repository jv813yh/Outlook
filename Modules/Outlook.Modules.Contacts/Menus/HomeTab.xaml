<idWpf:RibbonTabItem x:Class="Outlook.Modules.Contacts.Menus.HomeTab"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:idWpf="http://schemas.infragistics.com/xaml/wpf"
       xmlns:menus="clr-namespace:Outlook.Modules.Contacts.Menus"
       Header="Contacts">

    <!-- The RibbonGroup is a container for Ribbon controls with name Contacts -->
    <idWpf:RibbonGroup Caption="Contacts">

        <!-- In horizontal direction -->
        <idWpf:ToolHorizontalWrapPanel>

            <!-- Defines button in ribbon group Contacts
                 with text Button and shows image and text together -->
            <idWpf:ButtonTool Caption="Button"
                              idWpf:RibbonGroup.MaximumSize="ImageAndTextLarge"/>


        </idWpf:ToolHorizontalWrapPanel>
    </idWpf:RibbonGroup>

</idWpf:RibbonTabItem>
