<igWpf:RibbonTabItem x:Class="Outlook.Core.UserControls.HomeTab"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:igWpf="http://schemas.infragistics.com/xaml/wpf">


    <!-- The RibbonGroup is a container for Ribbon controls with name New -->
    <igWpf:RibbonGroup Caption="New">

        <!-- In horizontal direction -->
        <igWpf:ToolHorizontalWrapPanel>

            <!-- Defines button in ribbon group New
                 with text Button and shows image and text together -->
            <igWpf:ButtonTool Caption="Button"
                              igWpf:RibbonGroup.MaximumSize="ImageAndTextLarge"/>


        </igWpf:ToolHorizontalWrapPanel>
    </igWpf:RibbonGroup>

</igWpf:RibbonTabItem>
