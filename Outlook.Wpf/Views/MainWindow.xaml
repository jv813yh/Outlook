<ig:XamRibbonWindow  xmlns:ig="http://schemas.infragistics.com/xaml/wpf" x:Class="Outlook.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:igWpf="http://schemas.infragistics.com/xaml/wpf"
        xmlns:local="clr-namespace:Outlook.Wpf"
        xmlns:core="clr-namespace:Outlook.Core;assembly=Outlook.Core"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="350" 
        Width="525"
        prism:ViewModelLocator.AutoWireViewModel="True">


    <igWpf:RibbonWindowContentHost>
        <igWpf:RibbonWindowContentHost.Ribbon>
            <ig:XamRibbon>

            </ig:XamRibbon>
        </igWpf:RibbonWindowContentHost.Ribbon>

        <DockPanel LastChildFill="True">

            <igWpf:XamOutlookBar DockPanel.Dock="Left"
                                 Width="200">

            </igWpf:XamOutlookBar>

            <!-- The ContentControl is where the views will be injected by ContentRegion with Prism-->
            <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.ContentRegion}"/>
        </DockPanel>
    </igWpf:RibbonWindowContentHost>
</ig:XamRibbonWindow>
